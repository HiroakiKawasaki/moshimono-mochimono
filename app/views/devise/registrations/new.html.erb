<h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_area :nickname, id:"nickname", placeholder:"〇〇 太郎、△△ 花子", maxlength:"40" %>
  </div>

  <div class="field">
    <%= f.label :お名前（全角） %><br />
    <%= f.text_area :family_name, id:"family_name", placeholder: "例）鈴木" %>
    <%= f.text_area :first_name, id:"first_name", placeholder: "例）太郎"%>
  </div>

  <div class="field">
    <%= f.label :お名前（カナ） %><br />
    <%= f.text_area :family_name_kana, id:"family_name_kana", placeholder: "例）スズキ" %>
    <%= f.text_area :first_name_kana, id:"first_name_kana", placeholder: "例）タロウ"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
